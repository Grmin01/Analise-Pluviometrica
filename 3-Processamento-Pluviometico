  plot_clima_mensal(mensal_estacao, "Climatologia mensal ‚Äì Esta√ß√£o (83698)", "climatologia_mensal_estacao.png")
  plot_box_decadas(mensal_estacao, "Boxplots mensais por d√©cada ‚Äì Esta√ß√£o (83698)", "boxplots_decadas_estacao.png")
